{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false,
    "strictNullChecks":  true
  },
  "typedocOptions": {
    "out": "docs",
    "entryPoints": ["src/index.ts"],
    "excludePrivate": true,
    "includeVersion": true,
    "categorizeByGroup": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}